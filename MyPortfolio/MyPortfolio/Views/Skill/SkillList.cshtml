@model List<MyPortfolio.DAL.Entities.Skill>
@{
    ViewData["Title"] = "SkillList";
    Layout = "~/Views/LayoutController1/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Teknolojiler & Diller</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenek Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yetenekler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Dil</th>
									<th scope="col">%</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SkillId</td>
										<td>@item.Title</td>
										<td>@item.Value</td>									
										<td>  <a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a></td>
										<td>  <a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-success">Güncelle</a></td>

									</tr>
								}
							</tbody>
						</table>
						<a href="/Skill/CreateSkill/" class="btn btn-primary">Yeni Dil Ekle</a>

					</div>
				</div>


			</div>

		</div>
	</div>
</div>

