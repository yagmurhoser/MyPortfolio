@model MyPortfolio.DAL.Entities.Skill

@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/LayoutController1/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bilinen Diller</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenek Güncelleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="SkillId" />
							<label>Dil</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />

							<label>%</label>
							<input type="text" asp-for="Value" class="form-control" />
							<br />				

							<button class="btn btn-warning">Deneyimi Güncelle</button>

						</form>


					</div>
				</div>


			</div>

		</div>
	</div>
</div>


