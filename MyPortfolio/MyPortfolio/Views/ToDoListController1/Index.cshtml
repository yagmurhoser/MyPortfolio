@model List<ToDoList>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/LayoutController1/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yapılacaklar Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yapılacaklar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İçerik</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Date</td>
										@if(item.Status == true)
										{
											<td><a href="/ToDoListController1/ChangeIsReadToFalse/@item.ToDoListId" class="btn btn-dark">Yapılmadı Olarak İşaretle</a></td>
										}
										else
										{
											<td><a href="/ToDoListController1/ChangeIsReadToTrue/@item.ToDoListId" class="btn btn-info">Yapıldı Olarak İşaretle</a></td>

										}
										<td>  <a href="/ToDoListController1/DeleteToDoList/@item.ToDoListId" class="btn btn-danger">Sil</a></td>
										<td>  <a href="/ToDoListController1/UpdateToDoList/@item.ToDoListId" class="btn btn-success">Güncelle</a></td>

									</tr>
								}
							</tbody>
						</table>
						<a href="/ToDoListController1/CreateToDoList/" class="btn btn-primary">Yeni Yapılacak İşlem Girişi</a>

					</div>
				</div>


			</div>

		</div>
	</div>
</div>

